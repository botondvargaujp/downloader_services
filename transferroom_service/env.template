# TransferRoom Database Configuration
# Copy this file to .env and fill in your actual values

# Database Connection
# Format: postgresql://[user]:[password]@[host]:[port]/[database]
DATABASE_URL=postgresql://postgres:password@localhost:5432/transferroom

# For production with SSL:
# DATABASE_URL=postgresql://user:pass@prod-host:5432/transferroom?sslmode=require

# TransferRoom API Credentials
TRANSFERROOM_EMAIL=your_email@example.com
TRANSFERROOM_PASSWORD=your_password

# Optional: Pipeline Configuration
# Maximum records to fetch per sync (useful for testing)
MAX_RECORDS_PER_SYNC=

# Log Level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Optional: Connection Pool Settings
DB_POOL_MIN_SIZE=2
DB_POOL_MAX_SIZE=10

# Optional: API Rate Limiting
API_REQUEST_DELAY_SECONDS=0.5
API_MAX_RETRIES=3
